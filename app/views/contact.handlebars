<h3 class="display-5">連絡我們</h3>


<div class="container">
{{#if _flash}}
    <p>
        <div class="alert alert-{{_flash.alert}}">{{ _flash.msg}}</div>
    </p>
{{else}}
    <p>
        <form method="POST" action="/contact" class="form m-3">
            <div class="form-group row">
                <label for="name" class="col-sm-2">姓名</label>
                <input id="name" class="form-control col-sm-10"
                    type="text" name="name" required />
            </div>

            <div class="form-group row">
                <label for="email" class="col-sm-2">電子郵件</label>
                <input id="email" class="form-control col-sm-10"
                    type="email" name="email" required />
            </div>

            <div class="form-group row">
                <label for="subject" class="col-sm-2">主題</label>
                <input id="subject" class="form-control col-sm-10"
                    type="text" name="subject" />
            </div>

            <div class="form-group row">
                <label for="text" class="col-sm-2">內文</label>
                <textarea id="text" class="form-control col-sm-10"
                    name="text" required></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">寄送</button>    
            </div>

        </form>
    </p>
{{/if}}
</div>